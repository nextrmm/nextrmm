{
  "name": "nextrmm",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "db:push": "turbo run db:push",
    "db:studio": "turbo run db:studio",
    "db:migrate:reset": "turbo run db:migrate:reset",
    "postinstall": "turbo run db:generate",
    "format": "prettier --check \"**/*.{js,ts,jsx,tsx,md,json}\"",
    "format:fix": "prettier --write \"**/*.{js,ts,jsx,tsx,md,json}\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "start": "turbo run start --parallel",
    "clean": "turbo run clean && rm -rf node_modules && rm -rf .turbo && rm -rf .next",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@nextrmm/eslint-config": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "turbo": "^1.10.16"
  },
  "ct3aMetadata": {
    "initVersion": "7.22.0"
  },
  "lint-staged": {
    "(apps|packages)/**/*.{js,ts,jsx,tsx,md}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ],
    "apps/nextrmm/prisma/schema.prisma": [
      "prisma format"
    ]
  },
  "packageManager": "pnpm@8.8.0"
}
